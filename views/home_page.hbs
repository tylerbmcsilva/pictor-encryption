<!-- Log In Modal -->
<div id="login" class="modal" style="width: 95% !important;max-width: 400px;">
  <div class="modal-content">
    <div class="right-align">
      <a class="modal-close btn-large btn-floating btn-flat white-text indigo" href="#!" id="close"><i class="material-icons white-text">clear</i></a>
    </div>
    <h3 class="header center indigo-text">Login</h3>
    <form id="sign_in_form">
      <div class="input-field">
        <input class="validate indigo-text" type="email" name="email" id="email_login" autocomplete="email" required>
        <label for="email" class="indigo-text">Email</label>
      </div>
      <button class="btn btn-login indigo" id="loginbutton" name="login" type="submit">Welcome Back</button>
      <div class="center-align pad5">
        <a class="modal-close modal-trigger" href="#signup" id="close">Don't have an account? Sign Up</a>
      </div>
    </form>
  </div>
</div>

<!-- Sign Up Modal -->
<div id="signup" class="modal" style="width: 95% !important;max-width: 400px;">
  <div class="modal-content indigo darken-2">
    <div class="right-align">
      <a class="modal-close btn-large btn-floating btn-flat indigo-text white" href="#!" id="close"><i class="material-icons indigo-text">clear</i></a>
    </div>
    <div class="pad5">
     <h3 class="header center white-text">Register</h3>
    </div>
    <form id="register_form">
     <div class="input-field white-text">
       <input class="validate white-text" type="text" name="first_name" id="first_name" autocomplete="given-name" required>
       <label for="first_name" class="white-text">First Name</label>
     </div>
     <div class="input-field">
       <input class="validate white-text" type="text" name="last_name" id="last_name" autocomplete="family-name" required>
       <label for="last_name" class="white-text">Last Name</label>
     </div>
     <div class="input-field">
       <input class="validate white-text" type="email" name="email" id="email" autocomplete="email" required>
       <label for="email" class="white-text">Email</label>
     </div>
     <div class="input-field">
       <input class="validate white-text" type="text" name="location" id="location" autocomplete="country" required>
       <label for="location" class="white-text">Location</label>
     </div>
     <button id="registerbutton" name="register" type="submit" class="waves-effect waves-light btn white indigo-text">Register</button>
    </form>
  </div>
</div>



