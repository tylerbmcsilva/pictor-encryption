<!-- Log In Modal -->
<div id="login" class="modal">
  <div class="modal-content">
    <h2 class="right-align">
      <a class="modal-close btn-large btn-floating btn-flat indigo lighten-2 white-text" href="#!" id="close">&times;</a>
    </h2>
    <h3 class="header center indigo-text text-lighten-2">Account Login</h3>
    <form class="modal-content animate">
      <div class="container">
        <br>
        <label for="email"><b>Email</b></label>
        <input class="grey lighten-1" type="text" name="email" id="email_login" required>
        <button class="btn btn-login indigo lighten-2" id="loginbutton" name="login" type="button">Welcome Back</button>
        <a class="modal-close modal-trigger" href="#signup" id="close">Don't have an account? Sign Up</a>
      </div>
    </form>
  </div>
</div>

<!-- Sign Up Modal -->
<div id="signup" class="modal">
  <div class="modal-content indigo darken-2">
    <div class="modal-content">
      <h2 class="right-align">
        <a class="modal-close btn-large btn-floating btn-flat grey lighten-3 indigo-text lighten-2" href="#!" id="close">&times;</a>
      </h2>
      <h3 class="header center white-text text-lighten-2">Sign Up</h3>
      <form class="modal-content animate">
        <div class="container">
          <label for="fname"><b>First Name</b></label>
          <input class="indigo darken-3 white-text" type="text" name="first_name" id="first_name" required>
          <br>
          <label for="lname"><b>Last Name</b></label>
          <input class="indigo darken-3 white-text" type="text" name="last_name" id="last_name" required>
          <br>
          <label for="email"><b>Email</b></label>
          <input class="indigo darken-3 white-text" type="text" name="email" id="email_register" required>
          <button class="btn btn-login grey lighten-3 indigo-text lighten-2" id="registerbutton" name="register" type="button">So It Begins</button>
          <a class="modal-close modal-trigger" href="#login" id="close">Got an account? Log In</a>
        </div>
      </form>
    </div>
  </div>


