<section class="section pad1">
  <div class="row">
    <div class="col s12">
      <form id="search">
        <div class="input-field col s12">
          <i class="material-icons prefix">search</i>
          <input type="text" id="autocomplete-input" class="autocomplete">
          <label for="autocomplete-input">Find someone</label>
        </div>
      </form>
    </div>
    <div class="col s12 m6 l4">
      <ul class="collapsible">
        <li>
          <div class="collapsible-header"><i class="material-icons">filter_drama</i>Received Requests</div>
          <ul class="collapsible-body collection" id="received_requests">
          </ul>
        </li>
      </ul>
    </div>
    <div class="col s12 m6 l4">
      <ul class="collapsible">
        <li>
          <div class="collapsible-header"><i class="material-icons">filter_drama</i>Sent Requests</div>
          <ul class="collapsible-body collection" id="sent_requests">
          </ul>
        </li>
      </ul>
    </div>
  </div>

  <div class="row">
    <h1 class="center-align">Friends</h1>
    <div class="row" id="friends_list">
      <h4 class="center-align blue-grey-text text-lighten-4">No Friends available :(</h4>
    </div>

    <div id="success-modal" class="modal bottom pad1">
      <div class="row no-margin">
        <div class="col s4 offset-s8 right-align">
          <i class="modal-close small material-icons indigo-text">close</i>
        </div>
        <div class="col s12">
          <h4 id="success-message" class="indigo-text"></h4>
        </div>
      </div>
    </div>


</section>


<script src="/js/search.js"></script>
